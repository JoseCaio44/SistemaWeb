<body>
  <div class="container" style="margin-top: 5%;">
  <h1>Cadastrar Cliente</h1>
  <br>
  <form action="/clientes" method="post">
    <div class="form-group">
        <label for="inputNome">Nome</label>
        <input type="text" class="form-control" id="inputNome" name="cliente[nome]">
    </div>

    <div class="form-group">
        <label for="inputRG">RG</label>
        <input type="text" class="form-control" id="inputRG" name="cliente[rg]">
    </div>

    <div class="form-group">
        <label for="inputCelular">Celular</label>
        <input type="text" class="form-control" id="inputCity" name="cliente[celular]">
    </div>

      <div class="form-group">
        <label for="sel1">EndereÃ§o</label>
        <select class="form-control" name="cliente[endereco_id]">
        <% @enderecos.each do |endereco| %>
          <option value="<%=endereco.id%>"> <%=endereco.complemento%> </option>
        <%end %>
        </select>
      </div>
      
    <a href="/"><button type="menu" class="btn btn-secondary btn-lg">Voltar</button></a>
    <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
    
  </form> 
  </div> 
 </body>
</html>