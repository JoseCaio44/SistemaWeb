<p id="notice"><%= notice %></p>

<h1>Softwares</h1>

<table>
  <thead>
    <tr>
      <th>Versao</th>
      <th>Linguagem</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @softwares.each do |software| %>
      <tr>
        <td><%= software.versao %></td>
        <td><%= software.linguagem %></td>
        <td><%= software.tipo %></td>
        <td><%= link_to 'Show', software %></td>
        <td><%= link_to 'Edit', edit_software_path(software) %></td>
        <td><%= link_to 'Destroy', software, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

